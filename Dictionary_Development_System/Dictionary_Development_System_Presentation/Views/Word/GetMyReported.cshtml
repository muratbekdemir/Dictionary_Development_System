@model List<Dictionary_Development_System_RequestResponse.ViewModels.Word.WordView>
@{
  ViewBag.Title = "Search";
  Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="main">
  <!-- Breadcrumb -->
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/User/Index">Ana Sayfa</a></li>
    <li class="breadcrumb-item">Bildirdiklerim</li>
    <!-- Breadcrumb Menu-->
  </ol>
  <div class="card">
    <div class="card-body">
      <table class="table table-bordered table-striped table-sm">
        <thead>
          <tr>
            <th>Konu</th>
            <th>İlgi Alanı</th>
            <th>Bildirilme Zamanı</th>
            <th>Bulunduğu Aşama</th>
          </tr>
        </thead>
        <tbody>
          @if (Model.Count == 0)
          {
            <tr>
              <td colspan="4" align="center"> --   GÖRÜNTÜLENECEK VERİ BULUNAMADI   -- </td>
            </tr>
          }
          else
          {
            foreach (var item in Model)
            {
              <tr>
                <td>@item.Word</td>
                <td>@item.Interest.InterestName</td>
                <td>@item.CreatedDate</td>
                <td>@item.Status</td> </tr>
            }
          }
        </tbody>
      </table>
    </div>
  </div>
</main>

